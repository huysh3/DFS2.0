.page {
  background-color: #f0f0f0;
}


.counter-content {
  background-color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
}

.counter-content .title {
  float: left;
}

.counter-content .options {
  float: right;
}

.decr, .incr, .counter {
  display: inline-block;
}

.decr, .incr {
  border-radius: 50%;
  margin: 20rpx 0;
  line-height: 38rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgb(194, 44, 15);
  color: #fff;
  text-align: center;
}

.counter, .incr {
  margin-left: 40rpx;
}

.nav-content {
  background-color: #000;
  color: #fff;
  padding: 0 200rpx;
  padding-bottom: 60rpx;
}

.nav-item {
  height: 100rpx;
  line-height: 150rpx;
  text-align: center;
  border-bottom: 1rpx solid #fff;
}

/*.nav-item:last-child {
  border-bottom: 0;
}*/

.item {
  width: 750rpx;
  /*margin: 28rpx 28rpx 0 28rpx;*/
  background-color: #fff;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}

.item image {
  width: 100%;
  height: 530rpx;
  -o-object-fit: cover;
  object-fit: cover;
  border-bottom: 2rpx solid #aaa;
}

.item .name {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin: 20rpx 20rpx 20rpx 20rpx;
  color: #333;
}

.item .desc {
  font-size: 28rpx;
  margin: 20rpx 20rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical
}

.price-content {
  /*display: flex;*/
  /*flex-direction: row;*/
  padding: 10rpx 0;
}

.price, .worth {
  display: inline-block;
  /*flex: 1;*/
}

.price {
  font-weight: bold;
  font-size: 36rpx;
  color: #cca556;
  margin-left: 20rpx;
}

.worth {
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}
