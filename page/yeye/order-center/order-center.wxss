  width: 710rpx;
  background-color: #fff;
  margin: 20rpx;
  position: relative;
}

.topbar .left-part {
  display: inline-block;
  padding: 20rpx;
  font-size: 30rpx;
}

.topbar .right-part {
  float: right;
  /*height: 30rpx;*/
  margin: 20rpx;
  font-size: 30rpx;
  position: relative;
  border-left: 1rpx solid #000;
  padding-left: 20rpx;
}

