.list-item {
  width: 710rpx;
  margin: 20rpx;
  background-color: #fff;
  position: relative;
}

.list-item .top-content {
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.list-item .top-content .product-img {
  width: 150rpx;
  height: 150rpx;
  float: left;
  margin: 0 60rpx 0 40rpx;
}

.delete-btn {
  width: 25rpx;
  height: 25rpx;
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}

.top-content .brand,
.top-content .name,
.top-content .price {
  display: block;
  line-height: 48rpx;
}

.top-content .brand {
  font-family: "TimesNewRomanPSMT";
  font-size: 26rpx;
}

.top-content .name {
  font-family: "FranklinITCStd-Light";
  font-size: 26rpx;
}

.top-content .price {
  color: #999;
  font-size: 24rpx;
  font-family: "FranklinITCStd-Medium";
}

.price-content {
  background-color: #fff;
  padding: 20rpx 60rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.price-content .total-price {
  color: #B62A18;
  display: inline-block;
  font-family: "FranklinITCStd-Medium";
}

.price-content .total-rmb {
  float: right;
  font-size: 24rpx;
  color: #000;
}

.order-confirm-bar {
  background-color: rgb(222, 222, 222);
  padding-bottom: 20rpx;
  position: fixed;
  bottom: 0rpx;
}

.order-confirm-bar .top-content {
  padding: 20rpx 30rpx;
  width: 690rpx;
}

.order-confirm-bar .top-content .title {
  display: inline-block;
  color: #666;
}

.order-confirm-bar .top-content .total-fee {
  float: right;
  font-family: "FranklinITCStd-Medium";
}

.center-btn {
  height: 80rpx;
  line-height: 80rpx;
  background-color: #B62A18;
  color: #fff;
  text-align: center;
  width: 710rpx;
  margin-left: 20rpx;
}

.modal-content {
  width: 500rpx;
  padding: 30rpx;
  background-color: #fff;
  border: 2px solid #999;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  box-shadow:4rpx 4rpx 8rpx #999;
}

.modal-header {
  border-bottom: 1px solid #999;
}

.modal-content .icon {
  width: 80rpx;
  height: 80rpx;
  padding: 40rpx 0;
}

.modal-body {
  padding-top: 30rpx;
  font-size: 26rpx;
  line-height: 50rpx;
  color: #666;
}
