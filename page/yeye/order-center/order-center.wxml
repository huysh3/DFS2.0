<view class="page">
  <view class="header">
    <view bindtap="showUnfinishedOrderList" class="{{leftPartClass}}">进行中</view>
    <view bindtap="showHistoryOrderList" class="{{rightPartClass}}">已完成</view>
  </view>
  <view class="takeplace-90"></view>

  <view wx:for="{{indexOrderList}}" class="order-list-item">
    <view class="ol-img">
      <image src="{{item.product.order_banner}}?imageView/1/w/690/h/230"></image>
    </view>
    <view class="ol-title-content">
      <view class="left-part">{{item.product.name}}</view>
      <view class="right-part">{{item.order.price}}元</view>
    </view>
    <view class="ol-body-content">
      <view class="text">品牌: {{item.shop.name}}</view>
      <view class="text">SKU ID: {{item.order.start_time}}</view>
    </view>
  </view>

  <view class="takeplace-120"></view>

  <view class="order-confirm-bar" wx:if="{{tabState == 'left'}}">
    <view class="left-part"><view class="price">合计：3999元</view></view>
    <view class="right-part">确认订单</view>
  </view>
</view>
