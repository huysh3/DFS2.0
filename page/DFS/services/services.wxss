.services-container {
  width: 100vw;
  min-height: 100vh;
  background: url('https://om536p71r.qnssl.com/layer_pattern.png');
  background-size: auto 27rpx;
}

.main-content {
  padding-top: 170rpx;
  text-align: center;
}

.avatar {
  margin-top: 60rpx;
  width: 250rpx;
  height: 250rpx;
  z-index: 5;
  position: relative;
}

.desc {
  text-align: center;
  font-family: "FranklinITCStd-Light";
}

.banner {
  width: 750rpx;
  height: 110rpx;
  float: left;
}

.line-through {
  width: 4rpx;
  height: 38vh;
  background-color: rgb(200, 200, 200);
  position: absolute;
  left: 50%;
  z-index: 2;
  bottom: 150rpx;
}

.services-content .chat-img,
.call-content .call-img {
  width: 130rpx;
  height: 130rpx;
}

.services-content {
  position: absolute;
  top:734rpx;
  left:80rpx;
  pointer-events: none;
  z-index: 5;
}

.call-content {
  position: absolute;
  top:732rpx;
  right:80rpx;
}

.body-img {
  width: 100vw;
  height: 1000rpx;
  float: left;
}

.title {
  position: relative;
  top: 20rpx;
  font-family: "FranklinITCStd-Light";
  font-size: 30rpx;
}

.contact-btn {
  position: absolute;
  top:766rpx;
  left:118rpx;
  color: rgba(0, 0, 0, 0);
  z-index: 3;
}

.contact-time {
  width: 750rpx;
  height: 65rpx;
  position: absolute;
  bottom: 50rpx;
  left: 0;
}
